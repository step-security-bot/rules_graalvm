    name = "contrib_rules_jvm",
    version = "0.13.0",
    dev_dependency = True,
)

bazel_dep(
    name = "apple_rules_lint",
    version = "0.3.2",
    dev_dependency = True,
)

bazel_dep(
    name = "buildifier_prebuilt",
    version = "6.1.2.1",
    dev_dependency = True,
